<table class="assets-table">
    <thead>
    <tr>
        <th>{{localize "USR.Asset"}}</th>
        <th>{{localize "USR.AssetAmount"}}</th>
        <th>{{localize "USR.AssetChange"}}</th>
    </tr>
    </thead>
    <tbody>
    {{#each system.assets as |row index|}}
        <tr>
            <td>
                <a
                        class="edit-asset action-icon"
                        data-index="{{index}}"
                        title="{{localize 'USR.EditAsset'}}"
                >
                    <i class="fas fa-edit"></i>
                </a>
                {{row.name}}
            </td>
            <td>{{row.amount}}</td>
            <td>
                <!--
                <input type="number" id="change_{{index}}" value="0">
                <label for="change_{{index}}">
                    <a
                            class="add-asset action-icon"
